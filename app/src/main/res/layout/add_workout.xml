<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".selectWorkoutType">

    <Button
        android:id="@+id/addRunActivity"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:layout_marginStart="157dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="160dp"
        android:text="Running"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addWorkoutActivity"
        android:layout_width="411dp"
        android:layout_height="60dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="172dp"
        android:text="Workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRunActivity" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/workoutInputContainer"
        android:name="sg.edu.np.mad.myapplication.BlankFragment"
        android:layout_width="409dp"
        android:layout_height="597dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addWorkoutActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>